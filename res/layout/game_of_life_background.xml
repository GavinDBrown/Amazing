<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.GavinDev.drawing.GolSurfaceView
        android:id="@+id/game_of_life_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/start_kruskals_maze"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_margins"
            android:background="@drawable/start_menu_button"
            android:onClick="startKruskalsMaze"
            android:text="@string/start_kruskals_maze"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/start_medium_maze"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_margins"
            android:background="@drawable/start_menu_button"
            android:onClick="startMediumMaze"
            android:text="@string/start_medium_maze"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/start_recursive_backtracker_maze"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_margins"
            android:background="@drawable/start_menu_button"
            android:onClick="startRecursiveBacktrackerMaze"
            android:text="@string/start_recursive_backtracker_maze"
            android:textColor="@android:color/black" />

        <!-- sign-in button -->
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- sign-out button -->
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>