<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.GavinDev.Amazing"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <activity
            android:name="com.GavinDev.Amazing.activities.StartMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.GavinDev.Amazing.activities.MazeGame"
            android:parentActivityName="com.GavinDev.Amazing.activities.StartMenu" 
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.GavinDev.Amazing.activities.SettingsActivity"
            android:parentActivityName="com.GavinDev.Amazing.activities.StartMenu" >
        </activity>
    </application>

</manifest>